<section class="h-75">

    <div class="container">
        <div class="row">
            <h3 class="fw-normal mb-3" style="letter-spacing: 1px;">Create New Recipe</h3>
        </div>

        <form class="add-recipe-form">
            <div class="row">
                <div class="col-md-6 text-black">
                        <div class="mb-3">
                            <label for="recipename" class="form-label">Recipe Name</label>
                            <input class="form-control" id="add-recipe-name-input" type="text" placeholder="Recipe name"
                                aria-label="default input example">
                        </div>
                </div>
                <div class="col-md-4 text-black">
                        <div class="mb-3">
                            <label for="catselect" class="form-label">Categories</label>
                            <select name="" id="category-id" class="h-custom-2 form-select form-control-sm">
                                <option>Choose Category</option>
                                {{#each categories}}
                                <option id="category-id" value={{ this.id }}>{{ this.name }}</option>
                                {{/each}}
                            </select>
                        </div>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-6">
                                <p>Ingredient</p>
                            </div>
                            <div class="col-md-3">
                                <p>Measurement</p>
                            </div>
                            <div class="col-md-2">
                                <p>Unit</p>
                            </div>
                        </div>
                </div>
            </div>

            <!-- Ingredients -->
            <div class="row mb-1">
                <div class="col-md-10 ingredients-section">
                </div> <!-- Append new ingredient line -->
            </div>

            <!-- Section add Ingredients -->
            <div class="row mb-2">
                <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-6">
                                <input class="form-control name-input" type="text" id="add-ingredient-name-input"
                                    name="add-ingredient-name" />
                            </div>
                            <div class="col-md-3">
                                <input class="form-control measure-input" type="text" id="add-ingredient-measurement-input"
                                    name="add-ingredient-measurement" />
                            </div>
                            <div class="col-md-2">
                                <select class="h-custom-2 form-select form-control-sm edit-measurement-unit-value" id="add-measurement-unit-input">
                                {{> measurement-units }}
                                </select>
                            </div>
                            <div class="col-md-1 ingredients-inputs-section">
                                <button class="btn wide-button add-ingr-button" id="add-ingredient-button" type="button"
                                    style="background-color: #842029;" disabled>
                                    <i class="bi bi-plus-square-dotted" style="color: white"></i>
                                </button>
                            </div>
                        </div>
                </div>
            </div>

            <hr />

            <!-- Section Preparations -->
            <div class="row mt-3">
                <div class="col-md-10">
                        <label for="preparation" class="form-label"><strong>Preparation Instructions</strong></label>
                        <textarea class="form-control" id="add-recipe-instructions-input" rows="5"></textarea>
                        <button id="create-button" class="btn mr-1 mt-1" style="background-color: #842029;color:white;"><i
                                class="bi bi-apple"></i> Create</button>
                        <a class="btn btn-dark mr-1 mt-1" style="width:150px" href="/list"><i class="bi bi-door-open"></i>
                            Cancel</a>
                </div>
            </div>
        </form>
    </div>
</section>

<script src="/js/add-recipe.js"></script>