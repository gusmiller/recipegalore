<section class="h-75">
     <div class="container-fluid">
          <div class="row">
               <div class="col-sm-6 text-black">

                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 pt-xl-0 mt-xl-n5">

                         <form class="login-form" style="width: 23rem;">

                              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                              <div class="form-outline mb-4">
                                   <input type="email" id="email-login" class="form-control form-control-lg" />
                                   <label class="form-label" for="email-login">Email address</label>
                              </div>

                              <div class="form-outline mb-4">
                                   <input type="password" id="password-login" class="form-control form-control-lg" />
                                   <label class="form-label" for="password-login">Password</label>
                              </div>

                              <div class="pt-1 mb-2">
                                   <button class="btn btn-info btn-lg btn-block" type="submit" style="width:150px;">Login</button>
                              </div>

                              <p>Don't have an account? <a href="/register" class="link-info">Register here</a></p>

                         </form>

                    </div>

               </div>
               <div class="col-sm-6 d-none d-sm-block">
                    <img src="/images/carleton-u-logo.jpg"
                         alt="Carleton University - Login" style="object-fit: cover; object-position: left;">
               </div>
          </div>
     </div>
</section>

<script src="/js/login.js"></script>